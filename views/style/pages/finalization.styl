#finalization
	h1
		span
			color: dark_blue
	header
		h2
			float: left
		select
			float: right
			margin-right: 30px
	.intro
		padding: 30px
		background: #FFF url('../images/bg_crosshatch.png') 0 0 repeat
		bxsh(0 1px 0 #fff)
		border-bottom: 1px solid #bfbfbf
		p
			font-weight: bold
			color: dark_blue
	ul.comments
		list-style: none
		padding-bottom: 20px
		li+li
