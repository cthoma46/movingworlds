#landing
	aside.col1of2
		section
			clear: both
			margin-bottom: default_margin
			h3
				border-bottom: 1px solid gray
				bxsh(0 1px 0 #fff)
#profile_status
	.avatar
		float: left
	ul.todos, .completeness
		width: 178px;
		margin-left: 90px
	.completeness
		display: block
		margin-bottom: 20px
		padding: 7px 10px
		border: 1px solid #bfbfbf
		bdrz(3px)
		bxsh(0 1px 1px rgba(0,0,0,.55))
		grad(#FFF, #ededed)
		p
			margin-bottom: 3px
			color: gray
			font-family: default_fonts
			font-weight: 700
			text-transform: uppercase
			text-shadow: 0 1px 0 #FFFFFF
			font-size: 10px
			text-align: center
			strong
				font-size: 12px
				color: dark_gray
		.bar
			// position: relative
			overflow:hidden
			height: 10px
			background-color: #cdcdcd
			bxsh(0 1px 3px rgba(0, 0, 0, .45) inset)
			bdrz(30px)
			.bar_inner
				width: 50px
				height: 10px
				bxsh(0 1px 3px rgba(0, 0, 0, .45) inset)
				bdrz(0 30px 30px 0)
				background: #95e86b;
				background: -moz-linear-gradient(top,  #95e86b 5%, #c2ffa4 33%, #95e86b 65%);
				background: -webkit-gradient(linear, left top, left bottom, color-stop(5%,#95e86b), color-stop(33%,#c2ffa4), color-stop(65%,#95e86b));
				background: -webkit-linear-gradient(top,  #95e86b 5%,#c2ffa4 33%,#95e86b 65%);
				background: -o-linear-gradient(top,  #95e86b 5%,#c2ffa4 33%,#95e86b 65%);
				background: -ms-linear-gradient(top,  #95e86b 5%,#c2ffa4 33%,#95e86b 65%);
				background: linear-gradient(top,  #95e86b 5%,#c2ffa4 33%,#95e86b 65%);
				filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#95e86b', endColorstr='#95e86b',GradientType=0 )")
	ul.todos
		list-style: none
		// margin: 0
		padding: 0
		li
			font-size: 13px
			line-height: 1px
			margin-bottom: 5px
			h5
				font-size: 13px
				color: dark_gray
				margin-bottom: 10px
#recent_activity
	ul
		margin: 0
		padding: 0
		list-style: none
		li
			// position: relative
			height: 33px
			padding: 10px
			border: 1px solid gray
			background-color: #FFF
			bdrz(5px)
			margin-top: 10px
			bxsh(0 1px 0 #FFF)
			.icon
				display: block
				float:left;
				margin: -10px 10px 0 -10px;
				width: 50px
				height: 53px
				// background-color: red
				border-right: 1px solid gray
				span
					display: block
					margin: 20px auto;
			p
				font: bold 1em default_fonts
				time
					font-weight: normal
					color: gray
					font-size: 12px
					display: block
			
#favs_n_pats
	nav li a
		width: 102px;
		text-align: center
	.opportunities .opportunity + .opportunity
		padding-top: 10px
		margin-top: 10px
		border-top: 1px solid gray
#recommendations
	.widget+.widget
		margin-right: 0
	h2
		padding-bottom: 10px
		margin-bottom: 10px
		border-bottom: 1px solid gray
		bxsh(0 1px 0 #fff)
		a.reload_btn
			float: right
			margin-right: 10px
			font-size: 10px	
			
// EMAIL

#email .ui-state-default
	.inbox_alert
		float: right
		display: inline-block
		margin-top: -5px
		background-color: gray
		border: 2px solid #f7f7f7
		color: #f7f7f7
		width: 20px
		height: 18px
		padding: 2px 0 0
		bdrz(30px)
		text-shadow: none
		bxsh(none)
#email .ui-tabs-selected, #email .ui-state-hover
	.inbox_alert
		grad(red, #c23b3b)
		border: 2px solid white
		color: white
		width: 20px
		height: 18px
		padding: 3px 0 0
		bdrz(30px)
		bxsh(0 2px 3px rgba(0,0,0,.3))
		text-shadow: 0 1px 0 rgba(0,0,0,.30);
		
		
.email
	background-color: #FFF
	bdrz(5px)
	bxsh(0 2px 10px rgba(0,0,0,.2))
	margin-bottom: 20px
	padding: 20px
	.avatar
		float: left
	hgroup, .msg_body, nav
		margin-left: 100px
	hgroup
		position: relative
		time
			position: absolute
			top: 20px
			right: 0
			color: gray
		h3, h4
			text-transform: none
		h4
			a
				text-decoration: none
	nav
		width: 428px
		.delete_msg_btn
			float: right
			margin-top: 5px
nav.email_options
	label
		font: 12px default_fonts
		text-transform: uppercase
		color: gray
		text-align: right
		line-height: 10px
		margin-right: 10px