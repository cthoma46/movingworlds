p
	font: 14px Helvetica, Arial, sans-serif
	line-height: 1.5em
	color: text_color;
	padding-bottom: 10px
p+p
	margin-top: 20px
p img, figure
	margin-bottom: 20px

figcaption
	color: #999
	font-size: 0.8em

blockquote,
q
	quotes: none
	font: italic 1em/1em Georgia serif
	color: #444
	font-size: 16px

blockquote:before,
blockquote:after,
q:before,
q:after
	content: none

blockquote.pullquote_right,
blockquote.pullquote_left
	float: right
	width: 40%
	margin: 1.5em 1em 0.5em

blockquote.pullquote_left
	float: left

ins
	background-color: #ff9
	color: #000
	text-decoration: none

del
	text-decoration: line-through

abbr[title], dfn[title]
	border-bottom: 1px dotted #000
	cursor: help

hr
	display: block
	height: 1px
	border: 0
	border-top: 1px solid #bfbfbf
	box-shadow: 0 1px 0 #FFF
	margin: 20px 0
	padding: 0

small
	font-size: 75%

strong
	font-weight: bold

sub,
sup
	font-size: 75%
	line-height: 0
	position: relative
	vertical-align: baseline

sub
	vertical-align: sub
	font-size: smaller

sup
	vertical-align: super
	font-size: smaller

pre,
code,
kbd,
samp
	font-family: monospace, sans-serif

pre
	margin: 10px 0
	padding: 10px
	line-height: 18px
	background-color: dark_blue
	font-weight: bold
	font-size: 14px
	color: #fff
	white-space: pre-wrap
	word-wrap: break-word
	bdrz(3px)
	
mark
	background-color: #ff9
	color: #444
	font-style: italic
	font-weight: bold

::-moz-selection
	background: blue
	color: dark_blue
	text-shadow: none

::selection
	background: blue
	color: dark_blue
	text-shadow: none


// HEADLINES
h1,h2,h3,h4,h5,h6
	font-family: default_fonts
	font-weight: 700
	text-transform: uppercase
	color: #245b75
	margin-bottom: 0.2em
	text-shadow: 0 1px 0 #FFFFFF

h1
	font-size: 23px
	line-height: 1
	margin-bottom: 0.5em
	font-weight: 900
	color: #808080
	padding-bottom: 5px
	border-bottom: 1px solid #bfbfbf
	box-shadow: 0 1px 0 #fff

h1 em
	font-style: normal
	color: #245b75

h2
	font-size: 19px

h3
	font-size: 17px

h4
	font-size: 14px

h5
	font-size: 11px

h6
	font-size: 9px

hgroup
	margin-bottom: 0.2em

hgroup h1,hgroup h2,hgroup h3,hgroup h4,hgroup h5,hgroup h6
	margin-bottom: 0

// ANCHORS
a, a:active
	line-height: 1em
	color: blue
	text-decoration: none
	cursor: pointer;
	&.disabled 
		pointer-events: none
		cursor: default
		
a:hover
	color: #e96c6c

a:hover, a:active
	outline: 0

a:link
	-webkit-tap-highlight-color: #ff5e99

// LISTS
ul,ol
	margin: 0 20px 20px 0
	padding-left: 1.5em

ul
	list-style-type: disc

ol
	list-style-type: decimal

li ul, li ol
	margin: 0

nav ul, ul.no_style
	list-style: none
	margin: 0
	padding: 0

nav ul, ul.no_style
	margin-bottom: 20px

nav ul li
	float: left


menu ul
	margin: 0
	list-style: none
	li 
		margin-bottom: 10px
