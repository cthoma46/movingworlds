// MODAL
.modal
	position: fixed
	top: -25%
	left: 50%
	z-index: 1050
	overflow: auto
	width: 500px
	margin: -250px 0 0 -250px
	opacity: 0
	background-color: white //rgba(23, 28, 38, .75)
	border: 1px solid #171c26
	bdrz(10px)
	bxsh(0 2px 5px rgba(0,0,0,.40))

	header
		padding: 10px

	.modal-body
		text-align: center
		overflow-y: auto
		max-height: 420px
		padding: default_margin
		color: #FFF
		h3
			text-transform: none
			text-shadow: none
			font-size: 16px
			color: #6cc2e9
		p
			color: #FFF
			font-size: 12px
			font-weight: bold

	.modal-footer
		padding: 10px default_margin
		background: #CCC

	nav.socials
		text-align: center
		margin: 20px auto 20px
		padding-bottom: 20px
		border-bottom: 1px solid rgba(255,255,255,.40)

.modal_backdrop
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 1040
	background-color: #171c26
	filter: unquote('alpha(opacity=0)')
	opacity: 0

// Datepicker
.ui-datepicker
	display: none
	width: 165px
	padding: 20px
	background-color: rgba(23, 28, 38, .9)
	border: 1px solid #171c26
	bdrz(5px)
	bxsh(0 2px 5px rgba(0,0,0,.40))
	select+select
		margin-left: 5px
	select
		width: 80px
		float: left;
	.ui-datepicker-header
		margin: -20px 0 10px -20px
		width: 175px
		height: 29px
		border-bottom: 1px solid #171c26
		background-color: rgba(23, 28, 38, .75)
		bdrz(5px 5px 0 0)
		box-shadow: 0 1px 0 rgba(255,255,255,.40) inset, 0 1px 0 rgba(255,255,255,.40)
		padding: 9px 10px 0 20px
	.ui-datepicker-next,.ui-datepicker-prev
		display: none
	.ui-datepicker-calendar
		width: 165px
		th
			color: white
		td
			text-align: center
			a
				text-decoration: none
				font-weight: bold

// DATPICKER
