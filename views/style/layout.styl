.wrapper
	background: transparent url('../images/bg_wrapper.png') 0 0 repeat-x

.col1of2, .col2of2, .col1of3, .col2of3, .col3of3
	float: left
	margin-right: default_margin
	width: 300px

.col2of2, .col3of3
	margin: 0;


.col1of2, .col3of3
	margin-right: default_margin

// LISTS
ul, ol
	padding-left: 1.5em
	margin-bottom: 10px
	box-sizing: border-box

	&.unstyled
		list-style-type: none
		padding: 0
	
	&.inline li
		display: inline-block;
		margin-right: 10px
		&:last-child
			margin-right: 0

ul
	list-style-type: disc

ol
	list-style-type: decimal

nav ul, ul.no_style
	list-style: none
	margin: 0
	padding: 0

nav ul, ul.no_style
	margin-bottom: 20px

nav ul li
	float: left


menu ul
	margin: 0
	list-style: none
	li 
		margin-bottom: 10px

// cozy padding on generic items
:not(ul).cozy
:not(ol).cozy
	padding cozy_padding cozy_padding*2
// and it works a little differently for lists
ul.cozy, ol.cozy
	li 
		padding cozy_padding 0

// compact padding on generic items
:not(ul).compact
:not(ol).compact
	padding compact_padding compact_padding*2
ul.compact, ol.compact
	li 
		padding compact_padding 0

// GRID PADDING
// put a little space in your pure grid.
[class*="pure-u-"]
	box-sizing: border-box

	// the cozy unit itself gets no padding
	// (to account for child padding-bottom)
	&.pure-cozy
	&.pure-compact
		padding: 0 !important
	
	// comfortable padding on all direct descendants
	.pure-cozy > &
		padding-right: default_margin
		padding-bottom: default_margin
	// slightly less comfortable padding
	.pure-compact > &
		padding-right: (default_margin / 2)
		padding-bottom: (default_margin / 2)
	// clear padding on last descendant
	.pure-cozy > &:last-of-type
	.pure-compact > &:last-of-type
		padding-right: 0

// ensure that full-width units are just so.		
.pure-u-1
	width: 100%
	padding-right: 0 !important

// no padding on every other 1/2-width unit
.pure-u-1-2:nth-of-type(2n)
	padding-right: 0
