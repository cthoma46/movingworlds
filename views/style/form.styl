// Edit in place

.editable
	&:hover
		padding: 5px
		border: dashed 2px blue
		bdrz(5px 5px 5px 5px)

.editable_area
	min-height: 100px
	&:hover
		min-height: 100px
		padding: 5px
		border: dashed 2px blue
		bdrz(5px 5px 5px 5px)

.editable_empty
	display: block
	text-transform: none
	color: light_gray