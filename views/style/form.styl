form
	margin: 0
	line-height: 1em

	fieldset
		margin: 0 0 20px 0
		font-size: 14px
		legend
			*margin-left: -7px

	ul
		list-style: none
		margin: 0
		padding: 0
		li
			position: relative
			min-height: 45px
			display: block
			margin-bottom: 15px
			clear:both
			ul
				li
					min-height: 100% !important
					display: inline
					float: left
					clear:none
				li+li
					margin-left: 10px

	label
		display: block
		margin-bottom: 3px
		font: 700 11px default_fonts
		color: #808080
		letter-spacing: 1px
		text-transform: uppercase
		text-shadow: 0 1px 0 #FFFFFF
		vertical-align: bottom
		a
			color: blue
			margin: 0
			padding: 0
			//line-height: 5px !important
			vertical-align: text-top;

	button, input, select, textarea
		font-family: Arial, sans-serif
		font-size: 100%
		margin: 0
		vertical-align: baseline
		*vertical-align: middle
		outline: none

	button, input
		line-height: normal
		*overflow: visible

	input[type="search"],
	input[type="email"],
	input[type="date"],
	input[type="search"],
	input[type="email"],
	input[type="password"],
	input[type="text"],
	ul.tagit,
	.ui-autocomplete-input,
	textarea
		margin: 0
		width: 100%
		box-sizing: border-box;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		display:block
		padding: 8px 10px 6px
		color: #505050
		font-size: 12px
		font-weight: normal
		box-shadow: 0 1px 3px rgba(0,0,0,.43) inset
		border: none
		border-radius: 3px
		grad(#dddddd, #f0f0f0)
		&:focus
			grad(#e8e8e8, #ffffff)
		&.error, &.warning, &.success
			text-align: left !important

	.half
		width: 49%
		float: left
		clear:none
	.half+.half
		margin-left: 2%

	input[type="search"]
		-webkit-appearance: textfield
		-moz-box-sizing: content-box
		-webkit-box-sizing: content-box
		box-sizing: content-box

	input[type="search"]::-webkit-search-decoration
		-webkit-appearance: none

	select, option
		width: 100%

	textarea
		min-height: 45+28+28px

	::-webkit-input-placeholder
		color: gray

	::-moz-placeholder
		color: gray

	// RADIOS AND CHECKBOXES
	input[type="radio"],
	input[type="checkbox"]
		box-sizing: border-box
		position: absolute
		opacity: 0

	input[type="radio"] + label, input[type="radio"] + label a ,
	input[type="checkbox"] + label, input[type="checkbox"] + label a
		display: inline
		line-height: 21px
		text-indent: 5px

	input[type="radio"] + label::before ,
	input[type="checkbox"] + label::before
		content: ""
		display: inline-block
		width: 23px
		height: 18px
		background: url('/images/spt_form.png') no-repeat 0 0

	input[type="radio"]:focus + label,
	input[type="checkbox"]:focus + label
		outline: dotted 1px

	input[type="radio"]:disabled + label,
	input[type="checkbox"]:disabled + label
		opacity: .5
		cursor: default

	input[type="checkbox"]:not(:checked):hover + label::before
		background-position: 0 -18px

	input[type="checkbox"]:checked + label::before
		background-position: 0 -36px

	input[type="radio"] + label::before
		background-position: -23px 0

	input[type="radio"]:not(:checked):hover + label::before
		background-position: -23px -18px

	input[type="radio"]:checked + label::before
		background-position: -23px -36px

	button, input[type="button"], input[type="reset"], input[type="submit"]
		cursor: pointer
		-webkit-appearance: button

	button::-moz-focus-inner, input::-moz-focus-inner
		border: 0
		padding: 0

	.form_help, label span
		margin: 5px 0 0 0
		font-size: 12px
		color: #999
		text-transform: none
	label span
		text-shadow: none
		font: 11px Arial,sans-serif
		float: right
		margin: 0
		text-align: right

