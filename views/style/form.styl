	cursor: pointer
	&:hover
		background-position: 0 -26px
		color: #808080
		bxsh(0 1px 3px rgba(0,0,0,.45) inset\, 0 1px 0px #FFFFFF)

.uploadifive-queue-item
	background-color: #F5F5F5;
	border-bottom: 1px dotted #D5D5D5;
	bdrz(5px)
	font: 12px Arial, Helvetica, Sans-serif;
	margin-top: 3px;
	padding: 15px;
	.close
		background: url('uploadifive-cancel.png') 0 0 no-repeat;
		display: block;
		float: right;
		height: 16px;
		text-indent: -9999px;
		width: 16px;
	.progress
		border: 1px solid #D0D0D0;
		height: 3px;
		margin-top: 5px;
		width: 100%;
	.progress-bar
		background-color: #0072BC;
		height: 3px;
		width: 0;


// DATPICKER
.datepicker, .liveDatepicker
	position: relative
	// padding-right: 8px
	.ui-datepicker-trigger
		position: absolute
		bottom:0
		right: -2px;


	// SLIDER
.slider_container
	label
		margin-bottom: 10px
		span
			float: right;
			font-size: 14px;
			font-weight: 900
			color: blue

	.ui-slider, .ui-slider-handle
		cursor: pointer;
		outline: none;

	.ui-slider
		position: relative;
		height: 8px;
		width: 99%;
		background-color: #eaeaea;
		bxsh( 0 1px 3px rgba(0,0,0,.4) inset )
		bdrz(5px)

	.ui-slider-handle
		margin-left: -5px;
		position: absolute;
		top: -4px;
		right: 0px;
		z-index: 2;
		background: url('/images/spt_form.png') no-repeat -24px 0;
		width: 17px;
		height: 18px;
		&:hover, &:active
			background-position: -24px -18px
	.ui-slider-range
		background-color: #d3f1ff
		bxsh( 0 1px 3px rgba(0,0,0,.4) inset )
		bdrz(5px)
		height: 8px

// TAGIT - UI-AUTOCOMPLETE
div.tagit,
ul.tagit
	padding: 2px 5px!important
	overflow: auto;
	margin-left: inherit;
	margin-right: inherit;
	min-height: 28px
	li
		display: block;
		float: left;
		margin: 0
		// margin: 2px 5px 2px 0;
	li.tagit-new
		// background-color: red
		padding: .25em 4px .25em 0;
	p.tagit-choice,
	li.tagit-choice
		position: relative;
		height: 22px
		margin: 1px 25px 0 0
		padding-left: 15px;
		background: transparent url('/images/bg_tag.png') 0 0 no-repeat
		font: 12px Arial, sans-serif
		txsh(0,1px,0, #FFF)
		color: dark_gray
		.tagit-label
			height: 22px
			line-height: 20px;
			display: inline-block
			cursor: pointer;
			text-decoration: none;
		a.close
			display: block
			position: absolute;
			width: 20px
			height: 22px
			right: -20px
			top: 0
			background: transparent url('/images/bg_tag.png') right 0 no-repeat
			text-align: center
			text-decoration: none
			color: dark_gray
			font-weight: 900
			cursor:pointer
			border: none;
			bxsh(none);
			padding: 0
			&:hover
				color: blue
			.text-icon
				font-size: 15px
				line-height: 21px;
				// display: none
			// .ui-icon-close
		input
			display: block;
			float: left;
			// margin: 2px 5px 2px 0;
	input[type="text"]
		bxsh(none)
		background: red;
		border: none
		margin: 0
		padding: 3px 0 0;
		width: inherit;
		background-color: inherit;
		outline: none;


.ui-autocomplete
	bxsh(0 3px 5px rgba(0, 0, 0, .3))
	list-style: none
	padding: 0
	background-color: #FFF
	max-width: 300px  !important
	max-height: 200px;
	overflow-y: scroll
	bdrz(0 0 3px 3px)
	border-left: 1px solid gray
	border-right: 1px solid gray
	border-bottom: 1px solid gray
	.ui-menu-item+li.ui-menu-item
		border-top: 1px solid gray
	.ui-menu-item
		a
			display: block
			padding: 5px 10px
			text-transform: uppercase
			text-decoration: none
			color: dark_gray
			font: 700 12px default_fonts
	.ui-state-hover
		background-color: #d3f1ff
		color: blue  !important
