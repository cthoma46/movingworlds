ul
	&.error, &.warning, &.success
		list-style: none;
label
	&.error
		position: absolute
		top: -15px
		text-shadow: none
		&:before {
			// content: ' ';
			content: url('/images/icn_down_arrow_red.png');
			width: 12px;
			height: 15px;
			position: absolute;
			bottom: -10px
			left: 7px
			// border: 1px solid dark_red;
			overflow:hidden
			// border-bottom-color: red;
		}

.error, .warning, .success
	z-index: 9999
	padding: 5px 15px 5px 30px
	border-style: solid
	border-width: 1px
	text-align: center
	bdrz(3px)
	a
		color: white
		font-style: italic
		text-decoration: underline

.error
	background: red url('/images/icn_error.png') 10px 50% no-repeat
	color: dark_red
	border-color: dark_red

.warning
	background: yellow
	color: dark_yellow
	border-color: dark_yellow

.success
	background: green
	color: dark_green
	border-color: dark_green

#flash_message
	text-align: center;
	padding: 10px 0
	border: none
	background-image: url('/images/bg_flash_msg.png')
	background-repeat: repeat
	font-weight: bold
	color: #fff

.disclaimer {
	color: gray
	font-family: default_fonts
}