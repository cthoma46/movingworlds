@import "vars"
@import "functions"

//HTML STYLES
@import "reset"
@import "typography"
@import "table"
@import "form"
@import "helpers"

gray = #808080

#blog
	background: #FFF url(/images/bg_blog.png) 0 0 repeat

	.layout
		width 700px
		margin: 0 auto

	header#page_head
		position: relative
		height: 60px
		margin: 10px auto 30px
		a#logo
			display:block
			width: 289px
			height: 55px
			margin-top: 10px
			background: url(/images/spt_blog.png) -5px -6px no-repeat
			float: left
		nav#utility_nav
			position: absolute
			top: 0
			right: 0
			ul
				list-style:none
				li
					float: left
					a
						color: gray
						text-decoration: none
						&:hover
							color: blue

		form#search
			position: absolute
			bottom: 0
			right: 0
			width: 345px
			height: 34px
			input[type="search"]
				width: 231px
				height: 18px
				border: none
				box-shadow: none
				padding: 8px 5px 8px 32px
				margin: 0
				border-radius: 0
				background: url(/images/spt_blog.png) -303px -6px no-repeat
			button
				display: block
				position: absolute
				right: -1px
				top: 0px
				width: 79px
				height: 34px
				border: none
				background: url(/images/spt_blog.png) -571px -6px no-repeat
				color dard_blue
				font-weight: bold
				font-family: default_fonts
				txsh(0 1px 0 #FFF)
				&:hover
					color: blue

	#posts, #post
		padding-bottom: 30px
		.post
			position: relative
			display: block
			padding: 30px
			margin-bottom: 50px
			background-color: #fdfdfa
			bdrz(5px 5px 0 0)
			bxsh(0 0, 5px rgba(0, 0, 0, .13))

			time
				z-index: -1
				position: absolute
				left -40px
				top 30px
				display: block
				width: 48px
				height: 65px
				padding: 20px 37px 0 0
				background-color: green
				color: white
				text-align: center
				font-family: default_fonts
				font-weight: 900
				bdrz(100px)
				line-height: 15px
				.month, .day, .year
					display:block
					text-transform: uppercase
				.month
					font-size: 11px
				.day
					font-size: 21px
				.year
					font-size: 9px
			header
				border-top: 4px double #c7c7c5
				border-bottom: 4px double #c7c7c5
				padding: 18px 0 16px
				margin-bottom: 30px
				h2
					font-family: 'Alegreya', serif;
					font-size: 30px
					font-weight: 400
					text-transform: none
					text-align: center
					line-height: 30px
					a
						text-decoration: none
						color: dark_blue
						line-height: 0
						&:hover
							color: blue
			section.post_body
				padding-bottom: 30px
			section#signup_form
				display:none
				width 602px
				height: 78px
				padding: 20px
				background: url(/images/spt_blog.png) -5px -146px no-repeat
				margin-bottom: 30px
				h4
					text-align: center
					text-transform: none
					margin-bottom: 15px
				input
					width: 405px
					height: 35px
					float left
					margin-right: 10px
				button
					float: left
					display:block
					width: 187px
					height: 36px
					padding: 0 0 0 20px
					text-decoration: none
					text-align: center
					color: dark_blue
					font-family: default_fonts
					font-weight: 900
					text-shadow: 0 0 1px white
					border: none
					background: url(/images/spt_blog.png) -202px -274px no-repeat
					&:hover
						color: blue
			nav.pagination
				margin-bottom: 30px
				li.next
					float right
				a
					// font-weight: bold
					text-decoration: none
					color: gray
					&:hover
						color blue


			nav.post_options
				// height: 35px
				margin: 0
				a.more
					float: left
					display:block
					width: 175px
					height: 27px
					padding: 10px  0 0 20px
					text-decoration: none
					text-align: center
					color: dark_blue
					font-family: default_fonts
					font-weight: 900
					text-shadow: 0 0 1px white
					background: url(/images/spt_blog.png) 0 -274px no-repeat
					&:hover
						color: blue
				ul.socials
					li
						width: 100px
						iframe
							width: 100px !important
					li+li
						margin-left: 10px
				ul.tags
					margin: 0
					float: right
					max-width: 415px
					li+li
						margin-left: 7px
					li
						// background: url(/images/spt_blog.png) -584px -43px no-repeat
						background: url(/images/spt_blog.png) -519px -43px no-repeat
						padding-left: 11px
						margin-bottom: 7px
						a
							display:block
							height: 18px
							float: right
							padding: 2px 10px 0
							text-align: center
							color: white
							text-decoration: none
							font-family: default_fonts
							font-weight: 700
							background-color: #cccccc
							// background-color: dark_blue
							bdrz(0 2px 2px 0)
						&:hover
							background-position: -453px -43px
							a
								background-color: blue
			hr
				border:none
				border-bottom: 4px double #c7c7c5
				margin-bottom: 0

			footer
				position: absolute
				left: -5px
				bottom: -20px
				width: 710px
				height: 20px
				background: url(/images/spt_blog.png) 0 -120px no-repeat

	// ICONS
	.arrow_icn
		display:inline-block
		width: 11px
		height: 11px
		background: url(/images/spt_blog.png) 0 0 no-repeat
		vertical-align: baseline
		margin-right: 5px
		&.dark_blue_right
			background-position: -306px -51px
		&.dark_blue_left
			background-position: -306px -51px
		&.light_blue_right
			background-position: -321px -51px
			margin-left: 5px
		&.light_blue_left
			background-position: -332px -51px
			margin-right: 5px
	nav#socials
		position: fixed
		top: 20px
		right: 20px
		ul
			list-style:none
			li
				display:block
				float: left
				clear: left
				margin-bottom: 10px
				a
					text-indent: 999px
					display:block
					width: 56px
					height: 56px
					background: url(/images/spt_blog.png) -720px -7px no-repeat
					&.facebook
						background-position: -720px -7px
						&:hover
							background-position: -778px -7px
					&.twitter
						background-position: -720px -70px
						&:hover
							background-position: -778px -70px
					&.googleplus
						background-position: -720px -197px
						&:hover
							background-position: -778px -197px
					&.linkedin
						background-position: -720px -134px
						&:hover
							background-position: -778px -134px




