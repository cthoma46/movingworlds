extends layouts/layout_blog



block content
	!=body
	section#posts
		for post in children
			article.post
				header
					h2
						a(href=post.prettyUrl)=post.title
				section.post_body 
					p!=post.excerpt					
				nav.post_options.clearfix
					a(href=post.prettyUrl).more Continue Reading
					ul.tags
						for tag in post.tags
							li.tag
								a(href="#")=tag
				footer &nbsp;
				time(datetime="2011-10-05T09:00Z") 
					span.month= moment(post.created).format("MMM") 
					span.day= moment(post.created).format("DD")
					span.year= moment(post.created).format("YYYY")