	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		if( typeof title !== 'undefined' )
			meta(name='title', content=title )
		//- meta(name='description', content=description || "Professional volunteering around the world.")
		meta(name='viewport', content='width=device-width')
		if( typeof title !== 'undefined' )
			title!= title
		link(href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900', rel='stylesheet')
		link(href='/style/main.css', rel='stylesheet')
		link(href='/favicon.ico', rel='icon', type='image/x-icon')

	block scripts
		script( src='/javascript/lib/modernizr.min.js')
		script( src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
		script( src='/javascript/plugins/jquery.hover_intent.min.js')
		script( src='/javascript/plugins/jquery.mw_ease.js')
		script( src='/javascript/plugins/jquery.mw_modal.js')
	
	body( id=slug )
		include head
		div#container
			block content
		include foot
